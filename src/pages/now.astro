---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import LinkEnhancer from "@components/LinkEnhancer.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { SITE, NOW } from "@consts";
import { Content as NowContent, frontmatter } from "../content/now.md";
---

<PageLayout title={`${NOW.TITLE} | ${SITE.NAME}`} description={NOW.DESCRIPTION}>
  <Container>
    <div class="space-y-8">
      <div class="animate space-y-6">
        <h1 class="font-semibold text-2xl text-black/90 dark:text-white/90 mb-2">
          {NOW.TITLE}
        </h1>
        {frontmatter.updated && (
          <div class="text-sm text-stone-700/85 dark:text-stone-300/75 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-stone-400 dark:text-stone-500">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            Last updated <FormattedDate date={new Date(frontmatter.updated)} />
          </div>
        )}
      </div>

      <article class="animate prose dark:prose-invert max-w-none">
        <NowContent />
      </article>
    </div>
  </Container>

  <LinkEnhancer />
</PageLayout>
