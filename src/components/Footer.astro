---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
import BackToTop from "@components/BackToTop.astro";

const now = new Date();
const year = now.getFullYear();
const startOfYear = new Date(year, 0, 1);
const endOfYear = new Date(year + 1, 0, 1);
const totalDays = (endOfYear.getTime() - startOfYear.getTime()) / (1000 * 60 * 60 * 24);
const passedDays = Math.round((now.getTime() - startOfYear.getTime()) / (1000 * 60 * 60 * 24));
const progress = (passedDays / totalDays) * 100;

const progressPercentage = progress.toFixed(2);

// Create 20 squares for the progress bar
const totalSquares = 20;
const filledSquares = (progress / 100) * totalSquares;
---

<footer class="animate">
  <Container>
    <div class="relative">
      <div class="absolute right-0 -top-20">
        <BackToTop />
      </div>
    </div>

    <div class="flex justify-between items-center">
      <div class="animate">
        <div class="flex items-center mb-2 gap-2 text-sm">
          <span class="font-mono">{year}:</span>
          <div class="flex gap-1">
            {Array.from({ length: totalSquares }, (_, i) => (
              <div
                class={`w-3 h-3 border border-stone-500 dark:border-stone-300 ${
                  i < filledSquares
                    ? 'bg-stone-600 dark:bg-stone-400'
                    : 'bg-transparent'
                }`}
              />
            ))}
          </div>
          <span class="font-mono">{progressPercentage}%</span>
        </div>
      </div>
    </div>

    <div class="flex justify-between items-center">
      <div class="animate">
        &copy; 2024 ~ {year}
        {`|`}
        <a href="/" class="font-bold text-stone-800 dark:text-stone-300">{SITE.NAME}</a>
        {" Â· "}
        <a href="/rss.xml" class="font-bold text-cyan-600 dark:text-cyan-300 underline">RSS</a>
      </div>
      <div>
        <div class="animate">
          Power by
          <a href="https://astro.build/" class="font-bold text-base text-emerald-700 dark:text-emerald-200">Astro</a>
          &
          <a href="https://github.com/markhorn-dev/astro-nano" class="font-bold text-base text-emerald-700 dark:text-emerald-200">Astro Nano</a>
        </div>
      </div>
    </div>
  </Container>
</footer>
